<h1>Welcome!</h1>
<div class='sign-in-error'> 
   <% if flash[:notice] %>
      <%= flash[:notice] %>
   <% end %>
</div>
<br/>
<h3>Sign In: </h3>
<%= form_for :user, url: '/login', method: :post do |f| %>
   <%= f.label :username%>
   <%= f.text_field :username %><br>
   <%= f.label :password%>
   <%= f.password_field :password %><br>
   <%= f.submit "Login", :class => 'login-button'%>
<% end %>
<br>

Click  <%= link_to 'here', '/auth/github' %> to log in with Github
<br>
Click  <%= link_to 'here', '/signup' %> to create an account