<h1>Please Sign In: </h1>
<% if flash[:notice] %>
    <%= flash[:notice] %>
 <% end %>

<%= form_for :user, url: '/login', method: :post do |f| %>
   <%= f.label :username%>
   <%= f.text_field :username %><br>

   <%= f.label :password%>
   <%= f.password_field :password %><br>

   <%= f.submit "Login" %>
<% end %>

<br>

 Log In With: <%= link_to 'Github', '/auth/github' %> | <%= link_to 'Google',  '/auth/google_oauth2'%>

<h2>Or</h2>
<%= link_to 'Sign Up', '/signup' %>
